<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../../public/assets/style.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="../../public/scripts/loadIndex.js" type="text/javascript" async></script>
    <script src="../../public/scripts/loadAddEntry.js" type="text/javascript" async></script>
    <script src="../../public/scripts/postNewEntry.js" type="text/javascript" async></script>

    <title>BlogTitle</title>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row justify-content-around head-row">
        <div class="col-sm-6 title-col">
          <h1>-BlogTitle</h1>
        </div>
        <div class="col-sm-4 btn-col">
          <a href="entries/edit" class="btn btn-edit" >Edit</a>
          <button class="btn btn-add-page" onclick="loadAddEntry()">Add Page</button>
        </div>
      </div>

      <div class="row content-row">
        <div class="col-sm-2 bg-success box index-box">

          <div class="row button-row">
            <div id="index">
            <span class="slide">
              <a href="#" onclick="openIndex()">
                <input name="btn-index" type="image" src="public/resources/INDEX.svg" width="150">
              </a>
            </span>
            </div>
          </div>

          <div class="row index-row">
            <ul class="overflow-auto index">
            <% entries.forEach(entry => { %>
              <li class="list-group-item-action index" id="<%= entry.slug %>" onclick="loadIndex(this)">
                <%= entry.title %>
              </li>
            <% }) %>
          </ul>
          </div>
        </div>

        <div class="col-sm-10 bg-light box overflow-auto content-box" id="contentBox">
          <% entries.forEach(entry => { %>
          <div class="card mt-4">
            <div class="card-body">
              <h4 class="card-title"><%= entry.title %></h4>
              <div class="card-subtitle text-muted mb-2">
                <%= entry.createdAt.toLocaleDateString() %>
              </div>
              <div class="card-text mb-2"><%= entry.description %></div>
              <a href="entries/<%= entry.slug %>" class="btn btn-primary">
                Read More
              </a>
              <a href="entries/edit/<%= entry.id %>" class="btn btn-info">
                Edit
              </a>
              <form action="/entries/<%= entry.id %>?_method=DELETE" class="d-inline" method="POST">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
